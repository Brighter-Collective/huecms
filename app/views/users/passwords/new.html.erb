
<div class="content-wrapper not-signed-in" id="forgot-password-page">
	<div class="header">
		<div class="page-header left">Password</div>
		<div class="clear"></div>
	</div>
	<div class="main-content single-column-layout">
		<h1 class="page-title">Forgot your password?</h1>
		
		<div class="clear"></div>

		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="form-item">
		  <%= f.label :email %><br />
		  <%= f.email_field :email, :autofocus => true %>
		  </div>

		  <div class="form-item"><%= f.submit "Send me reset password instructions" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
		

			<div class="clear"></div>
	</div>
</div>
